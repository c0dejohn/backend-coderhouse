<h2 class="text-start mt-5 mb-5 fw-bolder text-primary">Vista de productos</h2>

<% if (productos.length > 0) { %>
<div class="table-responsive">
  <table class="table table-dark table-hover container">
    <thead>
      <tr style="color: yellow">
        <th>#</th>
        <th>Producto</th>
        <th>Precio</th>
        <th>Imagen</th>
      </tr>
    </thead>
    <tbody>
      <% productos.forEach(item => { %>
      <tr>
        <th><%= item.id %></th>
        <th><%= item.title %></th>
        <th><%= item.price %></th>
        <th><%= item.thumbnail %></th>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<% } else { %>
<h3 class="alert alert-danger">No se encontraron productos</h3>
<% } %>
